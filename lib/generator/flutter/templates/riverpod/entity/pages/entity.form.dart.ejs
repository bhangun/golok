import 'package:flutter/material.dart';

import '../blogic/<%= snackCase %>_blogic.dart';
import '../../widgets/progress_indicator_widget.dart';
import '../../../models/<%= snackCase %>.dart';

class <%= titleCase %>Form extends StatefulWidget {
  final <%= titleCase %>? data;
  <%= titleCase %>Form({this.data});
  @override
  _<%= titleCase %>FormState createState() => _<%= titleCase %>FormState();
}

class _<%= titleCase %>FormState extends State<<%= titleCase %>Form> {

  late <%= titleCase %>Store _<%= snackCase %>Store = <%= titleCase %>Store();<% for (idx in properties) { %><% if (properties[idx]['desc'] == 'relationship') {%>
  late <%= capitalize(idx) %>Store _<%= idx %>Store = <%= titleCase %>Store(); <%}}%>

  @override
  void dispose() {<% for (idx in properties) { %><% if (properties[idx].dartType != 'enum' && idx!='id' && properties[idx]['desc'] != 'relationship') {%>
    _<%= properties[idx].name %>.dispose();<%}%><%}%>
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {

   
    <% for (idx in properties) { if (idx != 'id' && properties[idx].dartType != 'enum' && properties[idx]['desc'] != 'relationship')  {%>
    _<%= properties[idx].name %>.addListener(() {
      _<%= snackCase %>Store.set<%= properties[idx].name%>(_<%= properties[idx].name %>.text);
    }); <%}}%>

    return  Scaffold(
            appBar: AppBar(
              title: Text(_<%= snackCase %>Store.formTitle),
            ),
            body: _buildBody(),
            floatingActionButton: FloatingActionButton(
              onPressed: () => _<%= snackCase %>Store.save(),
              tooltip: 'Add',
              child: Icon(Icons.save),
            ));
  }

  _buildBody() {
    return Stack(
      children: <Widget>[
        _<%= snackCase %>Store.loading
            ? CustomProgressIndicatorWidget()
            : Material(child: _buildForm()),
        _<%= snackCase %>Store.success
            ? Container()
            : showErrorMessage(context, '') 
        //_<%= snackCase %>Store.isModified ? KutAlert() : Container(),
      ],
    );
  }

  _buildForm() {
    return SafeArea(
        child: ListView(
            padding: EdgeInsets.symmetric(horizontal: 24.0),
            children: _buildListChild()));
  }

  _buildListChild() {
    return <Widget>[
      SizedBox(height: 120.0),<% for (idx in properties) { if (idx != 'id' && properties[idx].dartType != 'enum')  {%>
      TextField(
        controller: _<%= properties[idx].name %>,
        decoration: InputDecoration(
          filled: true,
          labelText: '<%= properties[idx].name %>',
        ),
      ),
      <%}}%>
    ];
  }
}
